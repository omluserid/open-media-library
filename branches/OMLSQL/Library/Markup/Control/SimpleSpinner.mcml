<Mcml xmlns="http://schemas.microsoft.com/2006/mcml"
      xmlns:cor="assembly://MSCorLib/System"
      xmlns:a="assembly://Library/Library"
      xmlns:me="Me">

  <Aggregate Source="resx://Library/Library.Resources/Base" />
  <Aggregate Source="resx://Library/Library.Resources/SimpleButton" />

  <UI Name="SimpleSpinner">

    <Properties>

      <IValueRange Name="Model" IValueRange="$Required" />
      <Color Name="BackgroundColor" Color="Transparent" />
      <FormatTransformer Name="LabelTransformer" Format="{0}" />
      <Size Name="Size" Size="250, 51" />
    </Properties>

    <Locals>

      <InvokeCommand Name="Previous" Target="[Model.PreviousValue]" />
      <InvokeCommand Name="Next" Target="[Model.NextValue]" />
      <cor:Boolean Name="HasFocus" />

    </Locals>

    <Rules>

      <Binding Source="[Model.Value]" Target="[Value.Content]" Transformer="[LabelTransformer]" />
      <Binding Source="[Model.HasNextValue]" Target="[Next.Available]"/>
      <Binding Source="[Model.HasPreviousValue]" Target="[Previous.Available]"/>

      <Condition Source="[Model.HasPreviousValue]" ConditionOp="Equals" SourceValue="false">
        <Actions>
          <Invoke Target="[btnNext.NavigateInto]" />
        </Actions>
      </Condition>

      <Condition Source="[Model.HasNextValue]" ConditionOp="Equals" SourceValue="false">
        <Actions>
          <Invoke Target="[btnPrevious.NavigateInto]" />
        </Actions>
      </Condition>

      <Condition Source="[Input.DeepKeyFocus]" SourceValue="true" Target="[HasFocus]" Value="[Input.DeepKeyFocus]" />
      <Condition Source="[Input.DeepMouseFocus]" SourceValue="true" Target="[HasFocus]" Value="[Input.DeepMouseFocus]" />
      <Condition Source="[HasFocus]" SourceValue="true" Target="[Background.Content]" Value="image://me:SpinnerBluebarLargeFocus" />

    </Rules>

    <Content>
      <Panel>
        <Layout>
          <FlowLayout Orientation="Horizontal" />
        </Layout>
        <Children>

          <!-- Current value -->
          <Graphic Name="Background" Content="image://me:SpinnerBluebarLargeNoFocus" MinimumSize="[Size]" MaximumSize="[Size]" Padding="5,10,0,5">
            <Children>
              <Text Name="Value" Font="font://me:Font" Color="White" />
            </Children>
          </Graphic>

          <!-- Previous button -->
          <me:SimpleButton  Command="[Previous]"
                            ImageFocus="image://me:SpinnerArrowBackFocus"
                            ImageNoFocus="image://me:SpinnerArrowBackNoFocus"
                            ImageDormant="image://me:SpinnerArrowBackDormant"
                            Name="btnPrevious"
                            Size="50,51"
                            />

          <!-- Next button -->
          <me:SimpleButton  Command="[Next]"
                            ImageFocus="image://me:SpinnerArrowForwardFocus"
                            ImageNoFocus="image://me:SpinnerArrowForwardNoFocus"
                            ImageDormant="image://me:SpinnerArrowForwardDormant"
                            Name="btnNext"
                            Size="50,51"
                            />

        </Children>
      </Panel>
    </Content>
  </UI>

  <Font Name="Font"                               FontName="global://me:RegularFontName" FontSize="20" />
  <Image Name="SpinnerArrowBackDisabled"          Source="resx://Library/Library.Resources/SpinnerArrowBackDisabled"/>
  <Image Name="SpinnerArrowBackDormant"           Source="resx://Library/Library.Resources/SpinnerArrowBackDormant"/>
  <Image Name="SpinnerArrowBackFocus"             Source="resx://Library/Library.Resources/SpinnerArrowBackFocus"/>
  <Image Name="SpinnerArrowBackFocusoverlay"      Source="resx://Library/Library.Resources/SpinnerArrowBackFocusoverlay"/>
  <Image Name="SpinnerArrowBackNoFocus"           Source="resx://Library/Library.Resources/SpinnerArrowBackNoFocus"/>
  <Image Name="SpinnerArrowForwardDisabled"       Source="resx://Library/Library.Resources/SpinnerArrowForwardDisabled"/>
  <Image Name="SpinnerArrowForwardDormant"        Source="resx://Library/Library.Resources/SpinnerArrowForwardDormant"/>
  <Image Name="SpinnerArrowForwardFocus"          Source="resx://Library/Library.Resources/SpinnerArrowForwardFocus"/>
  <Image Name="SpinnerArrowForwardFocusOverlay"   Source="resx://Library/Library.Resources/SpinnerArrowForwardFocusOverlay"/>
  <Image Name="SpinnerArrowForwardNoFocus"        Source="resx://Library/Library.Resources/SpinnerArrowForwardNoFocus"/>
  <Image Name="SpinnerBluebarLargeDormant"        Source="resx://Library/Library.Resources/SpinnerBluebarLargeDormant"/>
  <Image Name="SpinnerBluebarLargeFocus"          Source="resx://Library/Library.Resources/SpinnerBluebarLargeFocus"/>
  <Image Name="SpinnerBluebarLargeNoFocus"        Source="resx://Library/Library.Resources/SpinnerBluebarLargeNoFocus"/>

</Mcml>
