<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <bindings>
            <netNamedPipeBinding>
                <binding name="np-no-security">
                    <security mode="None">
                        <transport protectionLevel="None"/>
                    </security>
                </binding>
            </netNamedPipeBinding>

            <netTcpBinding>
                <binding name="nt-no-security" portSharingEnabled="true">
                    <security mode ="None">
                        <transport protectionLevel="None"/>
                    </security>
                </binding>
            </netTcpBinding>
        </bindings>

        <behaviors>
            <serviceBehaviors>
                <behavior name="OMLEngineService.TranscodingServiceBehavior">
                    <serviceMetadata />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
                <behavior name="OMLEngine.TitleCollectionAPIBehavior">
                    <serviceMetadata />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>

        <services>
            <service behaviorConfiguration="OMLEngineService.TranscodingServiceBehavior"
                     name="OMLEngineService.TranscodingService">
                <host>
                    <baseAddresses>
                        <add baseAddress="net.tcp://localhost:8321/OMLTS"/>
                    </baseAddresses>
                </host>
                <endpoint address="" name="TranscodingNetService"
                          binding="netTcpBinding" bindingConfiguration="nt-no-security"
                          contract="OMLEngineService.ITranscodingService">
                    <identity>
                        <dns value="localhost"/>
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="netTcpBinding"
                          contract="IMetadataExchange" bindingConfiguration="nt-no-security"/>
            </service>
            <service behaviorConfiguration="OMLEngine.TitleCollectionAPIBehavior"
                     name="OMLEngine.TitleCollectionAPI">
                <host>
                    <baseAddresses>
                        <add baseAddress="net.tcp://localhost:8321/OMLTC"/>
                    </baseAddresses>
                </host>
                <endpoint address="" name="TitleCollectionNetService"
                          binding="netTcpBinding" bindingConfiguration="nt-no-security"
                          contract="OMLEngine.ITitleCollectionAPI">
                    <identity>
                        <dns value="localhost"/>
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="netTcpBinding"
                          contract="IMetadataExchange" bindingConfiguration="nt-no-security"/>

                <!--
                <endpoint address="mex" name="TranscodingMexService"
                          binding="mexHttpBinding"
                          contract="IMetadataExchange">
                    <identity>
                        <dns value="localhost"/>
                    </identity>
                </endpoint>
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8731/Design_Time_Addresses/OMLEngineService/TranscodingService/" />
                    </baseAddresses>
                </host>
-->
            </service>
        </services>
    </system.serviceModel>

    <appSettings>
        <add key="Transcode.BufferSize" value="50000000" />
    </appSettings>
</configuration>
