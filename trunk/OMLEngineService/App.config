<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <bindings>
            <netNamedPipeBinding>
                <binding name="np-no-security">
                    <security mode="None">
                        <transport protectionLevel="None"/>
                    </security>
                </binding>
            </netNamedPipeBinding>
        </bindings>

        <behaviors>
            <serviceBehaviors>
                <behavior name="OMLEngineService.TranscodingServiceBehavior">
                    <!--<serviceMetadata httpGetEnabled="true" />-->
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>

        <client>
            <endpoint address="net.pipe://localhost/OMLTNS" name="TranscodingNetNotifyingService"
                      binding="netNamedPipeBinding" bindingConfiguration="np-no-security"
                      contract="OMLEngineService.ITranscodingNotifyingService" />
        </client>
      
        <services>
            <service behaviorConfiguration="OMLEngineService.TranscodingServiceBehavior"
                     name="OMLEngineService.TranscodingService">
                <endpoint address="net.pipe://localhost/OMLTS" name="TranscodingNetService"
                          binding="netNamedPipeBinding" bindingConfiguration="np-no-security"
                          contract="OMLEngineService.ITranscodingService" />
                <!--
                <endpoint address="mex" name="TranscodingMexService"
                          binding="mexHttpBinding"
                          contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8731/Design_Time_Addresses/OMLEngineService/TranscodingService/" />
                    </baseAddresses>
                </host>
                -->
            </service>
        </services>
    </system.serviceModel>

    <appSettings>
        <add key="Transcode.BufferSize" value="5242880" />
    </appSettings>
</configuration>
